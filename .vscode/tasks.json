{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "lib/glad/src/glad.o",
                "lib/cglm/libcglm.a",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Ilib/glad/include",
                "-Ilib/stb",
                "-Ilib/cglm/include",
                "-Wall",
                "-lglfw",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}